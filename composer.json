{
    "name": "germania-kg/phpexcel-wrapper",
    "description": "Outsourcing our PhpSpreadsheet stuff",


    "authors": [
        {
            "name":  "Carsten Witt",
            "email": "admin@germania-kg.com",
            "role":  "Developer"
        }
    ],

    "license": "MIT",

    "autoload": {
        "psr-4": {
            "Germania\\PhpExcelWrapper\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "tests\\": "tests/src"
        }
    },

    "require": {
        "phpoffice/phpspreadsheet": "^1.0"
    },

    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "php-coveralls/php-coveralls": "^2.0"
    },

    "scripts": {
        "phpunit"     : "phpunit --coverage-text",

        "test": [
            "@phpunit"
        ]
    }
}
